

<!-- mapbox -->

  <div id="map"></div>

  <script>
		L.mapbox.accessToken = 'pk.eyJ1IjoibXItZWF6ZSIsImEiOiJoZktRWmtzIn0.4hNlGrOoT3rmNXit3ZM9EQ';
		
		var map = L.mapbox.map('map', 'mr-eaze.e70a5ac4').setView([ <%= @business_profile.latitude %>, <%= @business_profile.longitude %> ], 15);
		
		L.mapbox.featureLayer({
	    // this feature is in the GeoJSON format: see geojson.org
	    // for the full specification
	    type: 'Feature',
	    geometry: {
	        type: 'Point',
	        // coordinates here are in longitude, latitude order because
	        // x, y is the standard for GeoJSON and many formats
	        coordinates: [
	          <%= @business_profile.longitude %>,
	          <%= @business_profile.latitude %> 
	        ]
	    },
	    properties: {
	        title: '<%= @business_profile.business_name %>',
	        description: '<%= @business_profile.address %>',
	        // one can customize markers by adding simplestyle properties
	        // https://www.mapbox.com/guides/an-open-platform/#simplestyle
	        'marker-size': 'large',
	        'marker-color': '#F5F5F5',
	        // 'marker-symbol': 'cafe'
	    }
		}).addTo(map);

	</script>


<!-- business profile -->

<div class="profile total-container">


	<!-- business name -->

	<h1 class="profile"> <%= @business_profile.business_name %> </h1>


	<!-- contact -->

	<div class="profile container group contact">

		<div class="profile container singular contact">
			<div class="profile data address"> <%= @business_profile.address %> </div>
		</div>
		
		<!-- fix bug / link not directing to site -->
		<div class="profile container singular contact">
			<a class="profile link website" href='<%= @business_profile.website_url %>'> <%= @business_profile.website_url %> </a>
		</div>

		<div class="profile container singular contact">
			<div class="profile data phone"> <%= @business_profile.phone_number %> </div>
		</div>

	</div> 


	<!-- about -->

	<div class="profile container group about">

		<div class="profile container about style dietary-offerings">
			<div class="profile label" > dietary offerings </div>
			<div class="profile data"> <%= @business_profile.dietary_offerings %> </div>
		</div>
		
		<div class="profile container about style business-type">
			<div class="profile label" > business type </div>
			<div class="profile data"> <%= @business_profile.business_type %> </div>
		</div>

		<div class="profile container about style cuisine-style">
			<div class="profile label" > cuisine style </div>
			<div class="profile data"> <%= @business_profile.cuisine_style %> </div>
		</div>

		<div class="profile container about description">
			<div class="profile label" > description </div>
			<div class="profile data"> <%= @business_profile.description %> </div>
		</div>
	
	</div>


	<!-- social networks -->

	<div class="container group social">
		<% if @business_profile.twitter %>
			<a class="profile social logo twitter" href='<%= @business_profile.twitter %>'>
				 <%= image_tag("logos/twitter_logo_white.png", class: "logo twitter")%>
			</a>
		<% end %>

		<% if @business_profile.facebook %>
			<a class="profile social logo facebook" href='<%= @business_profile.facebook %>'>
				 <%= image_tag("logos/facebook_logo_white.png", class: "logo facebook")%>
			</a>
		<% end %>

		<% if @business_profile.instagram %>
			<a class="profile social logo instagram" href='<%= @business_profile.instagram %>'>
				 <%= image_tag("logos/instagram_logo_white.png", class: "logo instagram")%>
			</a>
		<% end %>

		<% if @business_profile.foursquare %>
			<a class="profile social logo foursquare" href='<%= @business_profile.foursquare %>'>
				 <%= image_tag("logos/foursquare_logo_white.png", class: "logo foursquare")%>
			</a>
		<% end %>
	</div>

</div> <!-- end profile -->
















